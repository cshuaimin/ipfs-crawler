{% extends 'base.jinja2' %}
{% block main %}

<div class="row mt-2 pb-3 align-items-center">
  <a class="logo col-md-1" href="/">
    <img src="static/ipfs.svg" alt="IPFS" height="100%">
  </a>
  <form class="input-group col-md-6" style="height: 38px">
    <input name="q" type="text" class="form-control" value="{{ query }}">
    <div class="input-group-append">
      <button class="btn btn-outline-primary" type="submit">Search</button>
    </div>
  </form>
</div>

<div class="row">
{% for item in result %}
<div class="item card card-body col-md-6 offset-md-1">
  <a href="http://127.0.0.1:8080/ipfs/">
    <div class="link">
      <p class="title">{{ item.title }}</p>
      <p class="url">{{ item.hash }}</p>
    </div>
  </a>
  <p class="content">{{ item.text|truncate(128) }}</p>
</div>
{% endfor %}
</div>

<style>
  @media (min-width: 576px) {
    .logo {
      height: 48px;
    }
    .input-group {
      padding: 0;
    }
    .item {
      margin-top: .5em;
    }
  }
  @media (max-width: 576px) {
    .logo {
      display: flex;
      justify-content: center;
      height: 80px;
      margin-bottom: 6px;
    }
    .item {
      margin: .3em .5em;
    }
  }

  .title,
  .url,
  .content {
    margin: 0;
  }

  .title {
    font-size: 18px;
    line-height: 1.2;
    color: #1967D2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .url {
    font-size: 14px;
    color: #006621;
  }

  b {
    color: #dd4b39;
    font-style: normal;
  }
</style>
{% endblock main %}
